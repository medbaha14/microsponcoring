                 WHERE TABLE_SCHEMA = 'microsponsoring' 
                 AND TABLE_NAME = 'recognition_benefits' 
                 AND CONSTRAINT_NAME = 'FKfyp750mt2k2nha8sw6h48tdao') > 0,
                'ALTER TABLE recognition_benefits DROP FOREIGN KEY FKfyp750mt2k2nha8sw6h48tdao',
                'SELECT 1'
            ));
            PREPARE stmt FROM @sql;
            EXECUTE stmt;
            DEALLOCATE PREPARE stmt;
        </sql>
        
        <!-- Drop user_id foreign key constraints -->
        <sql>
            SET @sql = (SELECT IF(

                 WHERE TABLE_SCHEMA = 'microsponsoring' 
                 AND TABLE_NAME = 'companies_non_profits' 
                 AND CONSTRAINT_NAME = 'FK_companies_users') > 0,
                'ALTER TABLE companies_non_profits DROP FOREIGN KEY FK_companies_users',
                'SELECT 1'
            ));
            PREPARE stmt FROM @sql;
            EXECUTE stmt;
            DEALLOCATE PREPARE stmt;
        </sql>
        
        <sql>
            SET @sql = (SELECT IF(
                (SELECT COUNT(*) FROM INFORMATION_SCHEMA.KEY_COLUMN_USAGE 
                 WHERE TABLE_SCHEMA = 'microsponsoring' 
                 AND TABLE_NAME = 'sponsors' 
                 AND CONSTRAINT_NAME = 'FK_sponsors_users') > 0,
                'ALTER TABLE sponsors DROP FOREIGN KEY FK_sponsors_users',
                'SELECT 1'
            ));
            PREPARE stmt FROM @sql;
            EXECUTE stmt;
            DEALLOCATE PREPARE stmt;
        </sql>
        
        <sql>
            SET @sql = (SELECT IF(
                (SELECT COUNT(*) FROM INFORMATION_SCHEMA.KEY_COLUMN_USAGE 
                 WHERE TABLE_SCHEMA = 'microsponsoring' 
                 AND TABLE_NAME = 'password_reset_tokens' 
                 AND CONSTRAINT_NAME = 'FK_tokens_users') > 0,
                'ALTER TABLE password_reset_tokens DROP FOREIGN KEY FK_tokens_users',
                'SELECT 1'
            ));
            PREPARE stmt FROM @sql;
            EXECUTE stmt;
            DEALLOCATE PREPARE stmt;
        </sql>
        
        <sql>
            SET @sql = (SELECT IF(
                (SELECT COUNT(*) FROM INFORMATION_SCHEMA.KEY_COLUMN_USAGE 
                 WHERE TABLE_SCHEMA = 'microsponsoring' 
                 AND TABLE_NAME = 'invoices' 
                 AND CONSTRAINT_NAME = 'FKhr1j1hgihsma305wyfyjy9g4x') > 0,
                'ALTER TABLE invoices DROP FOREIGN KEY FKhr1j1hgihsma305wyfyjy9g4x',
                'SELECT 1'
            ));
            PREPARE stmt FROM @sql;
            EXECUTE stmt;
            DEALLOCATE PREPARE stmt;
        </sql>
        
        <!-- Modify column data types -->
        <modifyDataType tableName="users" columnName="user_id" newDataType="VARCHAR(36)"/>
        <modifyDataType tableName="companies_non_profits" columnName="company_id" newDataType="VARCHAR(36)"/>
        <modifyDataType tableName="companies_non_profits" columnName="user_id" newDataType="VARCHAR(36)"/>
        <modifyDataType tableName="sponsors" columnName="sponsor_id" newDataType="VARCHAR(36)"/>
        <modifyDataType tableName="sponsors" columnName="user_id" newDataType="VARCHAR(36)"/>
        <modifyDataType tableName="recognition_benefits" columnName="id" newDataType="VARCHAR(36)"/>
        <modifyDataType tableName="recognition_benefits" columnName="organization_id" newDataType="VARCHAR(36)"/>
        <modifyDataType tableName="password_reset_tokens" columnName="token_id" newDataType="VARCHAR(36)"/>
        <modifyDataType tableName="password_reset_tokens" columnName="user_id" newDataType="VARCHAR(36)"/>
        
        <!-- Re-add foreign key constraints -->
        <addForeignKeyConstraint 

<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="1.1" author="microsponsoring">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="password_reset_tokens"/>
            </not>
        </preConditions>
        <createTable tableName="password_reset_tokens">
            <column name="token_id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="token" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="user_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="expiry_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="used" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.3" author="microsponsoring">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="password_reset_tokens"/>
        </preConditions>
        <sql>
            DROP TABLE IF EXISTS password_reset_tokens;
        </sql>
        <createTable tableName="password_reset_tokens">
            <column name="token_id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="token" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="user_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="expiry_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="used" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Foreign key constraint removed - will be handled by JPA annotations -->

</databaseChangeLog> 
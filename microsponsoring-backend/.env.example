# Checkout.com API Keys (Replace with your actual keys)
CHECKOUT_SECRET_KEY=your_secret_key_here
CHECKOUT_PUBLIC_KEY=your_public_key_here

# Database Configuration
DB_URL=jdbc:mysql://localhost:3306/microsponsoring_db?useSSL=false&serverTimezone=UTC
DB_USERNAME=root
DB_PASSWORD=your_password_here

# Server Configuration
SERVER_PORT=8080

# File Upload Configuration
FILE_UPLOAD_DIR=./src/main/resources/images
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# JPA Configuration
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true
JPA_DIALECT=org.hibernate.dialect.MySQLDialect
JPA_OPEN_IN_VIEW=false

# Web Configuration
WEB_STATIC_LOCATIONS=classpath:/static/,file:images/

# Liquibase Configuration
LIQUIBASE_CHANGELOG=classpath:db/changelog/db.changelog-master.xml
LIQUIBASE_ENABLED=true
